{
  "extends": "../tsconfig.base.json",
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../config"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@api/common": ["../common/src"],
      "@api/config": ["../config/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
